<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/feed_img_height">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/news_image"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:src="@drawable/money_placeholder"/>


    </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/card_padding"
            android:paddingRight="@dimen/card_margin"
            android:paddingBottom="@dimen/card_padding_top"
            android:paddingTop="@dimen/card_padding_top"
            android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/title"
                    android:textSize="@dimen/row_head_size"
                    android:textColor="@color/black"
                    android:layout_marginBottom="10dp"
                    android:maxLines="3"
                    android:ellipsize="end"
                    android:textStyle="bold"
                    android:layout_marginRight="7dp"
                    />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/author"
                        android:singleLine="true"
                        android:textColor="@color/black" />
                    <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/date"
                android:textColor="@color/menu_item"
                />
            </LinearLayout>
</LinearLayout>
